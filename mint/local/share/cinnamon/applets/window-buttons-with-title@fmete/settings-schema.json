{
 "head" : {
    "type" : "header",
    "description" : "Window Buttons Settings"
 },
  "buttons-style": {
        "type": "entry",
        "description": "Window Buttons Style  (default: title:icon:minimize:maximize:close)",
        "default": "title:icon:minimize:maximize:close"
  },

   "buttons-theme" : {
    "type": "combobox",
    "default" : "default",
    "description" : "Buttons Theme  (Needs Restart Cinnamon)",
    "options" : {
        "Default" : "default",
        "Ambiance" : "Ambiance",
        "Ambiance-Blue" : "Ambiance-Blue",
        "Mac-OS-X" : "Mac-OS-X",
        "Mint-X" : "Mint-X",
        "Mint-Y" : "Mint-Y",
        "Radiance" : "Radiance",
        "UniMetro" : "UniMetro",
        "UniMetro-Black" : "UniMetro-Black",
        "Zukitwo" : "Zukitwo",
        "Zukitwo-Dark" : "Zukitwo-Dark",
        "Vimix" : "Vimix"
    },
    "tooltip" : "Please select a theme for window buttons"
 },
  "on-desktop-shutdown" : {
      "type" : "checkbox",
      "default" : false,
      "description": "On desktop show shutdown menu when click close button"
   },
 "text-mode" : {
      "type" : "checkbox",
      "default" : false,
      "description": "Text-Mode"
   },
   "only-maximized" : {
      "type" : "checkbox",
      "default" : false,
      "description": "Show applet (active buttons-title-icon on this instance) only active window maximized"
   },
   "title-desktop-text" : {
      "type" : "entry",
      "default" : "Desktop",
      "description" : "Desktop title button text"
   },
   "title-nowindow-text" : {
      "type" : "entry",
      "default" : "No Active Window",
      "description" : "No active window title button text"
   },
"cinnamon-maximus-button": {
        "type": "button",
        "description": "For Maximus option, please install cinnamon-maximus extension",
        "callback": "_cinnamonmaximus"
    },
 "div1" : {
    "type" : "separator"
 },
 "head2" : {
    "type" : "header",
    "description" : "Title and Icon Settings"
 },

 "icon-button-action" : {
    "type": "combobox",
    "default" : "2",
    "description" : "Icon Left Button Action",
    "options" : {
        "Nothing" : "0",
        "Scale" : "1",
        "Expo" : "3",
        "Show Desktop" : "2",
        "Move Window" : "4"

    }
 },
 "icon-middle-button-action" : {
    "type": "combobox",
    "default" : "3",
    "description" : "Icon Middle Button Action",
    "options" : {
        "Nothing" : "0",
        "Scale" : "1",
        "Expo" : "3",
        "Show Desktop" : "2",
        "Move Window" : "4"

    }
 },
 "title-button-action" : {
    "type": "combobox",
    "default" : "4",
    "description" : "Title Left Button Action",
    "options" : {
        "Nothing" : "0",
        "Scale" : "1",
        "Expo" : "3",
        "Show Desktop" : "2",
        "Move Window" : "4",
        "Maximize Windows" : "5"
    }

 },
 "title-middle-button-action" : {
    "type": "combobox",
    "default" : "1",
    "description" : "Title Middle Button Action",
    "options" : {
        "Nothing" : "0",
        "Scale" : "1",
        "Expo" : "3",
        "Show Desktop" : "2",
        "Move Window" : "4"

    }
 },
 "show-panels" : {
      "type" : "checkbox",
      "default" : true,
      "description": "Show panels when expo and scale are active"
   },
 "title-width-option" : {
    "type": "combobox",
    "default" : "width:",
    "description" : "Title Width Option:",
    "options" : {
        "width:" : "width:",
        "max-width:" : "max-width:"
    }
 },
 "title-width" : {
    "type": "spinbutton",
    "default" : 250,
    "min" : 100,
    "max" : 20000,
    "step" : 2,
    "units" : "pixels",
    "description" : "Title width:"
 },
 "title-icon-width" : {
    "type": "spinbutton",
    "default" : 16,
    "min" : 0,
    "max" : 128,
    "step" : 1,
    "units" : "pixels",
    "description" : "Title icon width:",
    "tooltip" : "Please be careful"
 },
 "div2" : {
    "type" : "separator"
 },
 "head3" : {
    "type" : "header",
    "description" : "Font Settings"
 },
  "title-font": {
        "type": "entry",
        "description": "Text font (empty for default theme font)",
        "default": ""
  },
  "title-font-color": {
        "type": "entry",
        "description": "Text color (empty for default theme color)",
        "default": ""
  },
   "title-font-style" : {
    "type": "combobox",
    "default" : "1",
    "description" : "Font style",
    "options" : {
        "Normal" : "normal",
        "Italic" : "italic"
    }
    }
    ,
 "title-font-size" : {
    "type": "spinbutton",
    "default" : 0,
    "min" : 0,
    "max" : 40,
    "step" : 1,
    "units" : "pixels",
    "description" : "Text Size (0 for theme default):"
 }
}
