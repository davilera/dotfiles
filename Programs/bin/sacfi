#!/bin/bash

while [ $# -ge 1 ];
do

	INPUT=$1
	BACKUP=$INPUT.bkp
	OUTFILE=`echo "$1" | sed -e s/\.[a-z]\\\+$//`.jpg

	echo -n "Converting $INPUT..." >&2
	mv "$INPUT" "$BACKUP"
	convert "$BACKUP" -resize "1200x800^" -gravity center -crop 1200x800+0+0 -quality 80 "$OUTFILE"
	echo " Done!" >&2

	shift

done

