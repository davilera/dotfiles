#!/bin/bash

if [ "$#" -lt 3 ]; then
  echo -e "\e[32mLet's create a new web app you can start with the app launcher.\n\e[0m"
  APP_NAME=$(gum input --prompt "Name> " --placeholder "My favorite web app")
  APP_URL=$(gum input --prompt "URL> " --placeholder "https://example.com")
  ICON_REF=$(gum input --prompt "Icon URL> " --placeholder "See https://dashboardicons.com (must use PNG!)")
  CUSTOM_EXEC=""
  MIME_TYPES=""
  INTERACTIVE_MODE=true
else
  APP_NAME="$1"
  APP_URL="$2"
  ICON_REF="$3"
  CUSTOM_EXEC="$4" # Optional custom exec command
  MIME_TYPES="$5"  # Optional mime types
  INTERACTIVE_MODE=false
fi

APP_URL="${APP_URL%/}"

# Ensure valid execution
if [[ -z "$APP_NAME" || -z "$APP_URL" || -z "$ICON_REF" ]]; then
  echo "You must set app name, app URL, and icon URL!"
  exit 1
fi

# Make sure this webapp is unique
if [ "$(firefoxpwa profile list | grep -c "^- $APP_NAME:")" -ne 0 ]; then
  echo "There's another webapp using the same name."
  echo "Use a different name or remove the existing one first!"
  exit 1
fi

# Prepare Firefox profile to run the webapp
profile="$(firefoxpwa profile create 2>/dev/null | grep "Profile created" | sed -e "s/.*Profile created: //")"
if [ "$profile" == "" ]; then
  echo "Unable to create profile. Something went wrong."
  exit 1
fi

manifest="$(echo "{\"name\":\"$APP_NAME\",\"short_name\":\"$APP_NAME\",\"description\":\"$APP_NAME\",\"start_url\":\"$APP_URL\",\"scope\":\"$APP_URL\",\"display\":\"standalone\"}" | base64 -w0)"
webapp="$(firefoxpwa site install "data:application/manifest+json;base64,$manifest" --document-url "$APP_URL" --profile "$profile" 2>/dev/null | grep "Web app installed" | sed -e "s/.*Web app installed: //")"

rm -f "$HOME/.local/share/applications/FFPWA-$webapp.desktop"
mkdir -p "$HOME/.local/share/firefoxpwa/profiles/$profile/chrome"
echo "user_pref( 'toolkit.legacyUserProfileCustomizations.stylesheets', true );" >"$HOME/.local/share/firefoxpwa/profiles/$profile/user.js"
echo "#navigator-toolbox { display:none }" >"$HOME/.local/share/firefoxpwa/profiles/$profile/chrome/userChrome.css"
echo "user_pref( 'firefoxpwa.launchType', 3 );" >>"$HOME/.local/share/firefoxpwa/profiles/$profile/prefs.js"
echo "user_pref( 'firefoxpwa.openOutOfScopeInDefaultBrowser', true );" >>"$HOME/.local/share/firefoxpwa/profiles/$profile/prefs.js"

# Refer to local icon or fetch remotely from URL
ICON_DIR="$HOME/.local/share/applications/icons"
if [[ $ICON_REF =~ ^https?:// ]]; then
  ICON_PATH="$ICON_DIR/$APP_NAME.png"
  if curl -sL -o "$ICON_PATH" "$ICON_REF"; then
    ICON_PATH="$ICON_DIR/$APP_NAME.png"
  else
    echo "Error: Failed to download icon."
    exit 1
  fi
else
  ICON_PATH="$ICON_DIR/$ICON_REF"
fi

# Use custom exec if provided, otherwise default behavior
if [[ -n $CUSTOM_EXEC ]]; then
  EXEC_COMMAND="$CUSTOM_EXEC"
else
  EXEC_COMMAND="$HOME/.local/bin/firefox-launch-webapp \"$APP_NAME\""
fi

# Create application .desktop file
DESKTOP_FILE="$HOME/.local/share/applications/$APP_NAME.desktop"

cat >"$DESKTOP_FILE" <<EOF
[Desktop Entry]
Version=1.0
Name=$APP_NAME
Comment=$APP_NAME
Exec=$EXEC_COMMAND
Terminal=false
Type=Application
Icon=$ICON_PATH
StartupNotify=true
EOF

# Add mime types if provided
if [[ -n $MIME_TYPES ]]; then
  echo "MimeType=$MIME_TYPES" >>"$DESKTOP_FILE"
fi

chmod +x "$DESKTOP_FILE"

if [[ $INTERACTIVE_MODE == true ]]; then
  echo -e "You can now find $APP_NAME using the app launcher\n"
fi
