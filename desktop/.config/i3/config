# Modifier
set $mod Mod4
floating_modifier $mod

# Reload and Restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Workspaces
set $ws_web      "1"
set $ws_term     "2"
set $ws_gimp     "3"
set $ws_inkscape "4"
set $ws_blender  "5"
set $ws_settings "6"
set $ws_zoom     "7"
set $ws_win      "8"
set $ws_chat     "9"
set $ws_misc     "10"

# Includes
include desktop.conf
include floating.conf
include multimedia.conf
include navigation.conf
include scratchpads.conf
include theme.conf
include workspaces.conf
include colorschemes/catppuccin-mocha.conf
include isrt.conf

# Keyboard Layout
exec_always --no-startup-id setxkbmap -layout us -variant altgr-intl
