# Basic settings
# --------------
unset MAILCHECK
PATH="./node_modules/.bin:./vendor/bin:$HOME/.bin:$HOME/.local/bin:$PATH"

# fasd aliases
# ------------
eval "$(fasd --init auto)"
alias j="fasd_cd -d"
alias kitty="LIBGL_ALWAYS_SOFTWARE=true GALLIUM_DRIVER=llvmpipe kitty"

# NVM
# ---
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
nvm use 16

# Brew
# ----
if [ -d /home/linuxbrew/.linuxbew ];
then
	eval $(/home/linuxbrew/.linuxbrew/bin/brew shellenv)
fi

# Haskell
# ------------
[ -f "/Users/david/.ghcup/env" ] && source "/Users/david/.ghcup/env"

# Aliases
# ------------
wp() {
	[ ! -e .lando.yml ] && echo "This doesn't look like a WordPress installation. Bye!" >&2 && return
	lando wp $@ --path=`grep webroot .lando.yml | cut -d: -f2 | xargs`
}

alias ovim="/usr/bin/vim"
alias vi="lvim"
alias vim="lvim"
alias cat="bat"
alias colorize="ccze -A"
# alias grep="grep --color --exclude-dir=vendor --exclude-dir=node_modules --exclude-dir=e2e-tests --exclude-dir=build --exclude-dir=dist --exclude-dir=build-module --exclude=\"*.min.*\" --exclude=\"*.map\" --exclude-dir=\".git\""
alias grep="ag --norecurse --noheading --nobreak --ignore node_modules --ignore vendor --ignore e2e-tests --ignore build --ignore dist --ignore build-module"
alias less="less --tabs=3 -iRFX"
alias top="htop"
alias tree="tree -C"

alias ga="git add"
alias gc="git commit"
alias gco="git checkout"
alias gd="git difftool --no-symlinks --dir-diff"
alias gg="git pull"
alias gp="git push"
alias gs="git status"

alias yi="yarn install"
alias yr="yarn run"
alias ry="yarn run"

alias ping="~/.bin/git/prettyping/prettyping"
alias pip="pip3"

if [ -d "/Users" ]
then
	export LSCOLORS="ExGxBxDxCxEgEdxbxgxcxd"
	alias ls="ls -G"
	alias eog="open -a Firefox"
else
	alias ls="ls --color --group-directories-first"
	alias eog="xviewer"
fi

if [ "$TERM" = 'xterm-kitty' ];
then
	alias eog="kitty +kitten icat"
	alias icat="kitty +kitten icat"
fi

if [ -e /proc/version ] && [ `grep microsoft /proc/version | wc -l` -gt 0 ];
then
	cd ~
fi
